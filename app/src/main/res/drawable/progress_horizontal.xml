<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp" />
            <gradient
                android:startColor="#1a73e8"
                android:centerColor="#1a73e8"
                android:endColor="#1a73e8"
                android:angle="0"
                android:centerY="0.5"
                android:centerX="0.5"
                android:type="linear" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="2dp" />
                <gradient
                    android:startColor="#80ffffff"
                    android:centerColor="#80ffffff"
                    android:endColor="#80ffffff"
                    android:angle="0"
                    android:centerY="0.5"
                    android:centerX="0.5"
                    android:type="linear" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp" />
                <gradient
                    android:startColor="#34a853"
                    android:centerColor="#34a853"
                    android:endColor="#34a853"
                    android:angle="0"
                    android:centerY="0.5"
                    android:centerX="0.5"
                    android:type="linear" />
            </shape>
        </clip>
    </item>
</layer-list>